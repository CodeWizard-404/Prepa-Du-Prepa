{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
<div class="container-fluid text-light">
    <h1 class="mt-4 mb-4">Course</h1>

    <div class="row">
        <div class="col-md-6">
            <table class="table text-light">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ course.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ course.title }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ course.description }}</td>
                    </tr>
                    <tr>
                        <th>Level</th>
                        <td>{{ course.level }}</td>
                    </tr>
                    <tr>
                        <th>Subject</th>
                        <td>{{ course.subject }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex p-2">
        <a href="{{ path('app_course_index') }}" class="btn btn-secondary mr-2">Back to List</a>

        <a href="{{ path('app_course_edit', {'id': course.id}) }}" class="btn btn-primary mr-2">Edit</a>

        {{ include('course/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
