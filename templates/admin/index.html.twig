{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
    <h1>Admin index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td>
                    <a href="{{ path('app_admin_show', {'id_admin': admin.id_admin}) }}">show</a>
                    <a href="{{ path('app_admin_edit', {'id_admin': admin.id_admin}) }}">edit</a>
