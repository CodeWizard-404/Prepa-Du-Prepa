{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="container-fluid text-light">
        <h1 class="mt-4 mb-4">User Details</h1>

        <div class="row">
            <div class="col-md-6">
                <table class="table text-light">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Username</th>
                            <td>{{ user.username }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Password</th>
                            <td>{{ user.password }}</td>
                        </tr>
                        <tr>
                            <th>Role</th>
                            <td>{{ user.role }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex p-2">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary mr-2">Back to List</a>

            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary mr-2">Edit</a>

            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
