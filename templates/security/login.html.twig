{# login.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #121212;
            color: #fff;
        }
        .form-signin {
            max-width: 400px;
            margin: 0 auto;
            padding: 15px;
            border: 1px solid #444;
            border-radius: 5px;
            background-color: #333;
        }
        .form-signin label {
            font-weight: bold;
            color: #fff;
        }
        .form-signin input {
            margin-bottom: 10px;
            border-radius: 3px;
            background-color: #444;
            color: #fff;
            border: 1px solid #555;
        }
        .form-signin input:focus {
            border-color: #007bff;
            outline: none;
        }
        .form-signin .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            width: 100%;
        }
        .form-signin .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        .form-signin .alert-danger {
            margin-top: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    {% if app.user %}
        {% if app.user.isAdmin %}
            {% set redirectRoute = 'admin' %}
        {% else %}
            {% set redirectRoute = 'user' %}
        {% endif %}
        <script>window.location.href = '{{ path(redirectRoute) }}';</script>
    {% else %}
        <form method="post" class="form-signin">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal text-center">Please sign in</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-lg btn-primary" type="submit">
                Login
            </button>
            <hr style="border:none;" >

            <div class="text-center mb-3 pt-6">
                <hr class="w-25 bg-secondary float-left">
                <span class="px-2 text-muted">or</span>
                <hr class="w-25 bg-secondary float-right">
            </div>

            <a href="{{ path('app_register') }}" class="btn btn-lg btn-secondary">Sign Up</a>
        </form>

        <script>
            document.addEventListener("DOMContentLoaded", function() {
                // Function to submit the form when Enter key is pressed
                document.getElementById("loginForm").addEventListener("keydown", function(event) {
                    if (event.key === "Enter") {
                        event.preventDefault(); // Prevent default form submission
                        document.getElementById("loginForm").submit(); 
                    }
                });
            });
        </script>
    {% endif %}
{% endblock %}
